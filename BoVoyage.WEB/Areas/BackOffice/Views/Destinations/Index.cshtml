@model IEnumerable<BoVoyage.WEB.Models.DestinationViewModel>

@{
	ViewBag.Title = "Liste des destinations";
}

<h2>Liste des destinations</h2>

<p>
	@Html.ActionLink("Créer une nouvelle destination", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Continent)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Country)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Area)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.City)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Description)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Continent)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Country)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Area)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.City)
			</td>
			<td>
				@Html.Raw(item.Description)
			</td>
			@if (item.Travels != null && item.Travels.Count() > 0)
			{
				<td>
					@Html.ActionLink("Modifier", "Edit", new { id = item.ID }, new { @class = "btn btn-info disabled" }) |
					@Html.ActionLink("Supprimer", "Delete", new { id = item.ID }, new { @class = "btn btn-info disabled" })
				</td>
			}
			else
			{
				<td>
					@Html.ActionLink("Modifier", "Edit", new { id = item.ID }, new { @class = "btn btn-info" }) |
					@Html.ActionLink("Supprimer", "Delete", new { id = item.ID }, new { @class = "btn btn-info" })
				</td>
			}
		</tr>
	}
</table>