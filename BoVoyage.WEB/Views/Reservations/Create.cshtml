@model BoVoyage.WEB.Models.ReservationViewModel

@{
	ViewBag.Title = "Nouvelle réservation";
}

<h2>Nouvelle réservation</h2>

<div>
	<h5>@Html.DisplayNameFor(model => model.TravelViewModel)</h5>
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.TravelViewModel.Destination)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.TravelViewModel.Destination.FullName)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.TravelViewModel.DepartureDate)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.TravelViewModel.DepartureDate)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.TravelViewModel.ReturnDate)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.TravelViewModel.ReturnDate)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.TravelViewModel.PricePerPerson)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.TravelViewModel.PricePerPerson)
		</dd>
	</dl>
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.CustomerViewModel)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.CustomerViewModel.Civility) @Html.DisplayFor(model => model.CustomerViewModel.LastName) @Html.DisplayFor(model => model.CustomerViewModel.FirstName)
		</dd>
	</dl>
</div>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })

		<div class="form-group">
			@Html.LabelFor(model => model.NbTraveler, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.NbTraveler, new { htmlAttributes = new { @class = "form-control", min = "1", max = "9" } })
				@Html.ValidationMessageFor(model => model.NbTraveler, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.IsTraveler, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.CheckBoxFor(model => model.IsTraveler, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.IsTraveler, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Insurances, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.ListBox("InsurancesID", (MultiSelectList)ViewBag.Insurances, new { @class = "form-control" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.CreditCardNb, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.CreditCardNb, new { htmlAttributes = new { @class = "form-control", min = "1", max = "9" } })
				@Html.ValidationMessageFor(model => model.CreditCardNb, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Suivant" class="btn btn-default" />
			</div>
		</div>
	</div>
}
<div>
	@Html.ActionLink("Annuler", "index", "destinations")
</div>