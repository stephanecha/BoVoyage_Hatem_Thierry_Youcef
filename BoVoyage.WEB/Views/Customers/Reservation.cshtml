@model IEnumerable<BoVoyage.WEB.Models.BookingFileViewModel>
@using BoVoyage.DAL.Entites;
@{
	ViewBag.Title = "Liste de vos réservations";
}

<h2>Liste de vos réservations</h2>

<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.TravelViewModel)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.TravelViewModel.DepartureDate)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.TravelViewModel.ReturnDate)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.State)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.NbTraveler)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.TotalPrice)
		</th>
		<th></th>
	</tr>

	@foreach (var item in (IEnumerable<BookingFile>)ViewBag.List)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Travel.Destination.FullName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Travel.DepartureDate)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Travel.ReturnDate)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.State)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.NbTraveler)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.TotalPrice)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
				@Html.ActionLink("Details", "Details", new { id = item.ID })
			</td>
		</tr>
	}
</table>