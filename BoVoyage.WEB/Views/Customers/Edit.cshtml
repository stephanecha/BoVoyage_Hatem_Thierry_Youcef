                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Modifier" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Retour à votre profil", "details")
    </div>
}